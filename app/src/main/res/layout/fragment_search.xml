<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearview"
    tools:context="com.eknowlabs.myapplication.SearchFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center|top"
        android:orientation="vertical" >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="search location"
        android:id="@+id/textView0"
        android:backgroundTint="@color/colorFormBox"
        android:textColor="@color/colorFormText"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/ic_menu_search"
        android:paddingBottom="8dp"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv1">
    <LinearLayout
        android:id="@+id/from_option"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" From:"
            android:layout_weight="1"
            android:id="@+id/textView1"
            android:drawableLeft="@drawable/ic_date_time"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/from_date_time"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:clickable="true"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv2">
    <LinearLayout
        android:id="@+id/to_option"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" Till:"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_date_time"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/to_date_time"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:clickable="true" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >
    <Button android:text="Search Parking"
        android:id="@+id/button1"
        android:background="@drawable/yellow_menu_btn"
        style="@style/ButtonText"
        android:gravity="center|bottom"/>
    </LinearLayout>

</LinearLayout>
